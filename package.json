{
  "name": "skrrt-boilerplate",
  "version": "1.0.0",
  "description": "React/Node fullstack boilerplate",
  "main": "index.js",
  "author": "lgarro",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint ./src --fix",
    "build:development": "webpack --mode development --config ./src/bundle/webpack.dev.config.js",
    "build": "webpack --mode production --optimize-minimize --config ./src/bundle/webpack.prod.config.js",
    "start:client": "webpack-dev-server --mode development --config ./src/bundle/webpack.dev.config.js --open",
    "start:server": "nodemon -r dotenv.config.js ./src/api/index.js --inspect --exec babel-node --presets @babel/preset-env",
    "start:development": "concurrently --kill-others-on-fail \"yarn start:server\" \"yarn start:client\"",
    "start": "node ./dist/bundle-back.js",
    "test": "jest ./src",
    "clean": "rimraf dist node_modules yarn.lock"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "concurrently": "^3.6.0",
    "connected-react-router": "^4.3.0",
    "dotenv": "^6.0.0",
    "eslint-config-airbnb": "^16.1.0",
    "history": "^4.7.2",
    "kcors": "^2.2.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.3",
    "mongoose": "^5.2.3",
    "prop-types": "^15.6.2",
    "prop-types-extra": "^1.1.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-hot-loader": "^4.3.3",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "rimraf": "^2.6.2",
    "styled-components": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/node": "^7.0.0-beta.51",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.51",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.51",
    "@babel/plugin-transform-react-jsx": "^7.0.0-beta.51",
    "@babel/polyfill": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-flow": "^7.0.0-beta.51",
    "@babel/preset-react": "^7.0.0-beta.51",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-react-flow-props-to-prop-types": "^0.15.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.9.1",
    "flow-bin": "^0.75.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "react-test-renderer": "^16.4.1",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./src/enzyme.setup.js"
  }
}
